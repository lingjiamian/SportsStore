@model IEnumerable<string>


@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })
@foreach(var link in Model)
{
    @Html.RouteLink(link, new { Controller = "Product", Action = "List",page = 1, category = link},
    new { @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedCategory ? "" : "btn-primary") }
    )
}

